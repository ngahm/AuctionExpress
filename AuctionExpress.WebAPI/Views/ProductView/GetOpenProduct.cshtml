@model IEnumerable<AuctionExpress.Models.ProductListItem>

@{
    ViewBag.Title = "GetOpenProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetOpenProduct</h2>

<p>
    @Html.ActionLink("Create New Product", "PostProduct", "ProductView", new { /*id = */ }, htmlAttributes: new { @class = "btn" }) |
    @Html.ActionLink("My Products", "GetProduct", "ProductView", new { /*id = */ }, htmlAttributes: new { @class = "btn" }) |
    @Html.ActionLink("All Products", "GetAllProduct", "ProductView", new { /*id = */ }, htmlAttributes: new { @class = "btn" }) |
    @Html.ActionLink("My Bids", "GetBidsByUser", "BidView", new { /*id = */ }, htmlAttributes: new { @class = "btn" }) |
    @Html.ActionLink("My Transactions", "GetTransaction", "TransactionView", new { /*id = */ }, htmlAttributes: new { @class = "btn" }) |

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductIsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCloseTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductStartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinimumSellingPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductIsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCloseTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductStartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinimumSellingPrice)
        </td>
        <td>
            @Html.ActionLink("Details", "GetProductById", new { id = item.ProductId }) |
            @Html.ActionLink("Bid", "CreateBid", "BidView", new { /*id = */ }, htmlAttributes: new { @class = "btn" }) |
            @Html.ActionLink("Edit", "PutProduct", new { id = item.ProductId }) |
            @Html.ActionLink("Delete", "DeleteProduct", new { id=item.ProductId })
        </td>
    </tr>
}

</table>
