@model IEnumerable<AuctionExpress.Models.BidListItem>

@{
    ViewBag.Title = "GetBidsByProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetBidsByProduct</h2>

<p>
    @Html.ActionLink("Create New", "CreateBid")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BidId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BidderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BidPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BidId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BidderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BidPrice)
            </td>
            <td>
                <!--@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |-->
                @Html.ActionLink("Details", "GetBidById", new { id = item.BidId })
                <!--@Html.ActionLink("Delete", "DeleteBid", new { id=item.BidId})-->
            </td>
        </tr>
    }
    <tr>
        <td>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </td>
    </tr>
</table>

<div>
    @Html.ActionLink("All Open Products", "GetOpenProduct", "ProductView", new { /*id = */ }, htmlAttributes: new { @class = "btn" })  |
    @Html.ActionLink("My Bids", "GetBidsByUser", "BidView", new { /*id = */ }, htmlAttributes: new { @class = "btn" })
</div>

