@model IEnumerable<AuctionExpress.Models.BidListItem>

@{
    ViewBag.Title = "GetBidsByUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetBidsByUser</h2>

<p>
    @Html.ActionLink("My Products", "GetProduct", "ProductView", new { /*id = */ }, htmlAttributes: new { @class = "btn" }) |
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BidId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BidderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BidPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BidId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BidderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BidPrice)
        </td>
        <td>
            @Html.ActionLink("Details", "GetBidById", new { id=item.BidId}) |
            @Html.ActionLink("All Bids on This Product", "GetBidsByProduct", new { id=item.ProductId}) |
            @Html.ActionLink("Delete", "DeleteBid", new { id=item.BidId})
        </td>
    </tr>
}

</table>
