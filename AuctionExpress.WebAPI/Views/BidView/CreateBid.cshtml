@model AuctionExpress.Models.BidCreate

@{
    ViewBag.Title = "CreateBid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateBid</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
